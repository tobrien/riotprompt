{
  "name": "@kjerneverk/riotprompt",
  "version": "1.0.6",
  "_versionReset": "2026-01-15",
  "keywords": [
    "prompt",
    "llm",
    "genai",
    "openai"
  ],
  "description": "Get it together, and organize your prompts.",
  "type": "module",
  "main": "./dist/riotprompt.js",
  "types": "./dist/riotprompt.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/kjerneverk/riotprompt"
  },
  "exports": {
    ".": {
      "types": "./dist/riotprompt.d.ts",
      "import": "./dist/riotprompt.js"
    }
  },
  "bin": {
    "riotprompt": "./dist/cli.js",
    "riotprompt-mcp": "./dist/mcp-server.js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build && vite build -c vite.config.cli.ts && node scripts/build-mcp.js && copyfiles -u 1 \"src/mcp/prompts/*.md\" dist && chmod 755 ./dist/mcp-server.js 2>/dev/null || true",
    "start": "dist/main.js",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "npm run test:coverage",
    "test:coverage": "vitest run --coverage",
    "test:debug": "vitest --run --coverage --reporter verbose",
    "test:security": "vitest run tests/security",
    "test:security:watch": "vitest tests/security",
    "test:readme": "doccident -c .markdown-doctest-setup.mjs README.md",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run build && npm run lint && npm run test",
    "prepublishOnly": "npm run clean && npm run build",
    "mcp:build": "vite build && node scripts/build-mcp.js && chmod 755 ./dist/mcp-server.js 2>/dev/null || true",
    "mcp:inspect": "mcp-inspector npx -y @modelcontextprotocol/server-riotprompt",
    "mcp:dev": "vite build --watch",
    "docs:dev": "cd docs && cp ../README.md public/ && npm install && npm run dev",
    "docs:build": "cd docs && cp ../README.md public/ && npm install && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "docs:test": "cd docs && npm run test",
    "docs:coverage": "cd docs && npm run coverage"
  },
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/plugin-transform-modules-commonjs": "^7.27.1",
    "@babel/plugin-transform-typescript": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@doccident/doccident": "^0.0.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.1",
    "@modelcontextprotocol/inspector": "^0.19.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@swc/core": "^1.12.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.0.12",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/coverage-v8": "^4.0.17",
    "ajv": "^8.17.1",
    "copyfiles": "^2.4.1",
    "esbuild": "0.27.2",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^17.0.0",
    "rollup-plugin-preserve-shebang": "^1.0.1",
    "typescript": "^5.8.3",
    "vite": "^7.0.4",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@fjell/logging": "^4.4.68",
    "@google/generative-ai": "^0.24.1",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@utilarium/cardigantime": "^0.0.24",
    "@utilarium/pressurelid": "^1.0.3",
    "@utilarium/spotclean": "^0.0.4",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "fast-xml-parser": "^5.3.3",
    "glob": "^11.0.3",
    "js-yaml": "^4.1.1",
    "marked": "^16.0.0",
    "openai": "^6.15.0",
    "tiktoken": "^1.0.22",
    "zod": "^4.3.6",
    "zod-to-json-schema": "^3.25.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/generative-ai": "^0.24.1",
    "@kjerneverk/agentic": "^1.0.5",
    "@kjerneverk/execution": "^1.0.4",
    "@kjerneverk/execution-anthropic": "^1.0.4",
    "@kjerneverk/execution-gemini": "^1.0.4",
    "@kjerneverk/execution-openai": "^1.0.5",
    "openai": "^6.15.0",
    "tiktoken": "^1.0.22"
  },
  "peerDependenciesMeta": {
    "@kjerneverk/execution": {
      "optional": true
    },
    "@kjerneverk/execution-openai": {
      "optional": true
    },
    "@kjerneverk/execution-anthropic": {
      "optional": true
    },
    "@kjerneverk/execution-gemini": {
      "optional": true
    },
    "@kjerneverk/agentic": {
      "optional": true
    },
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@google/generative-ai": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  }
}
